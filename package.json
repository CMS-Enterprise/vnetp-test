{
  "name": "automation-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "build:prod": "ng build --configuration production",
    "documentation": "compodoc --watch --serve --open",
    "format": "prettier --write \"src/**/*.{ts,js,html,css,scss}\"",
    "test": "jest --no-cache --runInBand",
    "test:ci": "jest --ci --no-cache --runInBand --coverage --verbose --silent",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "sonar": "sonar-scanner",
    "generate-client": "rimraf client/* && TS_POST_PROCESS_FILE=./node_modules/.bin/prettier openapi-generator-cli generate",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.6",
    "@angular/cdk": "^20",
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/material": "^20",
    "@angular/platform-browser": "^20.1.6",
    "@angular/platform-browser-dynamic": "^20.1.6",
    "@angular/router": "^20.1.6",
    "@fortawesome/angular-fontawesome": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-regular-svg-icons": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@ng-select/ng-select": "^20.1.1",
    "@types/papaparse": "^5.3.16",
    "bootstrap": "^5.3.7",
    "netmask": "^2.0.2",
    "ngx-papaparse": "^8.0.0",
    "ngx-smart-modal": "^14.1.0",
    "ngx-toastr": "^19.0.0",
    "papaparse": "^5.5.3",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "validator": "^13.15.15",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "@angular/language-service": "^20.1.6",
    "@compodoc/compodoc": "^1.1.16",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@types/jest": "^29",
    "@types/node": "^22.17.1",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.7",
    "jest": "^29",
    "jest-preset-angular": "^14.6.1",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^8.10.2",
    "typescript": "~5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "!(client)/**/*.{js,ts,html,css,scss}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.8.0"
  }
}
