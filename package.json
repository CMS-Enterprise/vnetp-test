{
  "name": "automation-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --disable-host-check",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "build:prod": "ng build --configuration production",
    "documentation": "compodoc --watch --serve --open",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --no-cache --runInBand",
    "test:ci": "jest --ci --no-cache --runInBand --coverage --verbose --silent",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "sonar": "sonar-scanner",
    "generate-client": "TS_POST_PROCESS_FILE=./node_modules/.bin/prettier openapi-generator-cli generate"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.3.0",
    "@angular/common": "^14.3.0",
    "@angular/compiler": "^14.3.0",
    "@angular/core": "^14.3.0",
    "@angular/forms": "^14.3.0",
    "@angular/platform-browser": "^14.3.0",
    "@angular/platform-browser-dynamic": "^14.3.0",
    "@angular/router": "^14.3.0",
    "@fortawesome/angular-fontawesome": "^0.10.2",
    "@fortawesome/fontawesome-common-types": "^0.2.29",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-regular-svg-icons": "^5.13.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@ng-select/ng-select": "^8.3.0",
    "bootstrap": "^4.5.0",
    "jquery": "^3.7.0",
    "ngx-pagination": "^5.0.0",
    "ngx-papaparse": "^5.0.0",
    "ngx-smart-modal": "^7.1.1",
    "ngx-toastr": "^13.2.1",
    "rxjs": "~6.5.3",
    "tslib": "^2.6.1",
    "validator": "^13.9.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.12",
    "@angular/cli": "^14.2.12",
    "@angular/compiler-cli": "^14.3.0",
    "@angular/language-service": "^14.3.0",
    "@compodoc/compodoc": "^1.1.11",
    "@openapitools/openapi-generator-cli": "^2.3.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^3.1.0",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.6",
    "lint-staged": "^10.5.4",
    "prettier": "^2.8.8",
    "ts-jest": "^28.0.8",
    "ts-node": "^8.10.2",
    "typescript": "~4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "!(client)/**/*.{js,ts}": [
      "prettier --write"
    ]
  }
}
