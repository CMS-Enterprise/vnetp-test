{
  "name": "automation-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --disable-host-check --host 0.0.0.0",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "build:prod": "ng build --configuration production",
    "documentation": "compodoc --watch --serve --open",
    "format": "prettier --write \"src/**/*.{ts,js,html,css,scss}\"",
    "test": "jest --no-cache --runInBand",
    "test:ci": "jest --ci --no-cache --runInBand --coverage --verbose --silent",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "sonar": "sonar-scanner",
    "generate-client": "rimraf client/* && TS_POST_PROCESS_FILE=./node_modules/.bin/prettier openapi-generator-cli generate"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.6",
    "@angular/cdk": "^17.3.9",
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/material": "^17.3.9",
    "@angular/platform-browser": "^20.1.6",
    "@angular/platform-browser-dynamic": "^20.1.6",
    "@angular/router": "^20.1.6",
    "@fortawesome/angular-fontawesome": "^0.14.1",
    "@fortawesome/fontawesome-common-types": "^0.2.36",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@ng-select/ng-select": "^12.0.7",
    "bootstrap": "^4.6.2",
    "jquery": "^3.7.1",
    "netmask": "^2.0.2",
    "ngx-pagination": "^6.0.3",
    "ngx-papaparse": "^5.1.0",
    "ngx-smart-modal": "^14.0.3",
    "ngx-toastr": "^16.2.0",
    "rxjs": "~6.5.3",
    "tslib": "^2.6.1",
    "validator": "^13.11.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "@angular/language-service": "^20.1.6",
    "@compodoc/compodoc": "^1.1.16",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "jest-preset-angular": "^13.1.6",
    "lint-staged": "^10.5.4",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^8.10.2",
    "typescript": "~5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "!(client)/**/*.{js,ts,html,css,scss}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.8.0"
  }
}