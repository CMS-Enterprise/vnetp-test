{
  "name": "automation-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --disable-host-check --host 0.0.0.0",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "build:prod": "ng build --configuration production",
    "documentation": "compodoc --watch --serve --open",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --no-cache --runInBand",
    "test:ci": "jest --ci --no-cache --runInBand --coverage --verbose --silent",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "sonar": "sonar-scanner",
    "generate-client": "TS_POST_PROCESS_FILE=./node_modules/.bin/prettier openapi-generator-cli generate"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.8",
    "@angular/common": "^16.2.8",
    "@angular/compiler": "^16.2.8",
    "@angular/core": "^16.2.8",
    "@angular/forms": "^16.2.8",
    "@angular/platform-browser": "^16.2.8",
    "@angular/platform-browser-dynamic": "^16.2.8",
    "@angular/router": "^16.2.8",
    "@fortawesome/angular-fontawesome": "^0.13.0",
    "@fortawesome/fontawesome-common-types": "^0.2.29",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-regular-svg-icons": "^5.13.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@ng-select/ng-select": "^11.1.1",
    "bootstrap": "^4.5.0",
    "jquery": "^3.7.0",
    "netmask": "^2.0.2",
    "ngx-pagination": "^6.0.3",
    "ngx-papaparse": "^5.0.0",
    "ngx-smart-modal": "^14.0.2",
    "ngx-toastr": "^16.2.0",
    "rxjs": "~6.5.3",
    "tslib": "^2.6.1",
    "validator": "^13.9.0",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.5",
    "@angular/cli": "^16.2.5",
    "@angular/compiler-cli": "^16.2.8",
    "@angular/language-service": "^16.2.8",
    "@compodoc/compodoc": "^1.1.16",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "^2.28.0",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "jest-preset-angular": "^13.1.2",
    "lint-staged": "^10.5.4",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^8.10.2",
    "typescript": "~4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "!(client)/**/*.{js,ts}": [
      "prettier --write"
    ]
  }
}
